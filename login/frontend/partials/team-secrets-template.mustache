{{#secrets}}
<div class="clearfix secret" data-id="{{secretId}}">
  <div class="pull-left">
    <img class="secret-icon" src="{{icon}}" width="32" height="32" alt="" data-icon-text="{{renderedTitle}}">
  </div>

  <div class="text">
    <div class="name">{{renderedTitle}}</div>
    <div class="link">
      <a target="_blank" href="{{hostname}}">{{host}}</a>
    </div>
  </div>

  <div class="clearfix pull-right actions">
    <div class="pull-left link2">
      <a href="../html/admin-manage-secret.html?secretId={{secretId}}">Manage</a>
    </div>
    <div class="remove-secret pull-left"><a href="#"><i class="ico ico-cross"></i></a></div>
  </div>
</div>
{{/secrets}}
