{{#secrets}}
<div class="clearfix secret" data-id="{{secretId}}">
  <div class="pull-left">
    <img class="secret-icon" src="{{icon}}" width="32" height="32" alt="" data-icon-text="{{renderedTitle}}">
  </div>

  <div class="text">
    <div class="name search-this-value">{{renderedTitle}}</div>
    <div class="link">
      <a target="_blank" href="{{hostname}} class="search-this-value"">
        {{host}}
      </a>
    </div>
  </div>

  <div class="clearfix pull-right actions">
    <input id="{{checkboxId}}" class="css-checkbox" type="checkbox" {{checked}}>
    <label for="{{checkboxId}}" class="css-label">&nbsp;</label>
  </div>
</div>
{{/secrets}}
